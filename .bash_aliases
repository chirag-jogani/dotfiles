#aliases for efficiency
alias nmapi="nmap -sC -sV -f"
alias ins="sudo apt-get install"
alias rem="sudo apt-get purge"
alias ll='clear && ls --color=always -rthla'
alias tools='cd ~/tools && ls'
alias grep='grep --color=auto'
alias gg='git grep -ni'
alias phpunit='phpunit --colors'
alias vimpress="VIMENV=talk vim"
alias c="composer"
alias v="vagrant"
alias d="sudo docker"
alias biggest="du -h --max-depth=1 | sort -h"
alias :q="exit"
alias norg="gron --ungron"
alias ungron="gron --ungron"
alias j="jobs"
alias follow="tail -f -n +1"
alias lazyrecon='~/tools/lazyrecon/lazyrecon.sh -d'
alias xsstrike='python ~/tools/XSStrike/xsstrike.py'
alias locky='python ~/tools/locky.py'
alias pentestlab='~/tools/pentestlab/pentestlab.sh'
alias goodbye='~/goodbye.sh'
alias zoom='zoom </dev/null &>/dev/null &'
alias xclip='xclip -selection clipboard'
